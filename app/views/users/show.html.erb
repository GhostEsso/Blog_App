<div id="user_container">
  <%= render partial: "users/user_info", locals: { user: @user } %>
</div>

<div id="user_bio">
  <h3>Bio</h3>
  <p><%= @user.bio %></p>
</div>

<div id="post_container">
  <% @user.three_recent_posts.each_with_index do |post, i| %>
    <li>
      <%= link_to "/users/#{@user.id}/posts/#{post.id}", id: "post" do %>
        <%= render partial: "posts/post_info", locals: { post: post } %>
      <% end %>
    </li>
  <% end %>
</div>

<%= link_to "See all posts", "/users/#{@user.id}/posts?page=1" %>
